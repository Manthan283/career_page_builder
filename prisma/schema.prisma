generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Company {
  id          String   @id @default(uuid())
  slug        String   @unique
  name        String
  description String?
  website     String?
  branding    Json?    // { logo, primaryColor, heroText, about }
  settings    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  jobs        Job[]
}

model Job {
  id               String   @id @default(uuid())
  company          Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId        String
  title            String
  slug             String
  location         String?
  jobType          String?
  description      String
  responsibilities Json?
  qualifications   Json?
  isPublished      Boolean  @default(true)
  postedAt         DateTime @default(now())
  expiresAt        DateTime?
  metadata         Json?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@unique([companyId, slug])
  @@index([companyId, title])
}
